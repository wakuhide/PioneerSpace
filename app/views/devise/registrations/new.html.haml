.container.user-new
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .form-inputs
        .col-md-12
          %h2 Register
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!

            .user-name_image.row
              .user-name.col-md-10
                = f.text_field :username, autofocus: "autofocus", placeholder: "Input Username", required: "required", type: "text"
              .user-image.col-md-2.fileinput.fileinput-new{"data-provides" => "fileinput"}
              .fileinput-preview{"data-trigger" => "fileinput"}
                = f.file_field :avatar, type: "file"
                = f.email_field :email, placeholder: "E-Mail"
                = f.password_field :password, type: "password", placeholder: "Password"
              .col-md-12
                %h4 Group
                .user-user-member.row
                  .user-name.col-md-12
                    = f.text_field :group, placeholder: "Input Group", type: "text"
              .col-md-12
                %h4 Profile
                .user-user-profile.row
                  .user-name.col-md-12
                    = f.text_field :profile, cols: "30", placeholder: "Input Profile", rows: "4"
                %h4 Works
                .user-name_image.row
                  .user-name.col-md-12
                    = f.text_field :work, cols: "30", rows: "4", placeholder: "Input Works"
            .form-group
              .form-actions
                = f.submit "SIGN UP", class: "btn btn-primary withripple"