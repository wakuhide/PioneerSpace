.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              =f.text_field :username, type: "text", placeholder: "Username"
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            = f.file_field :avatar, type: "file"
          .user-email
            = f.email_field :email, placeholder: "E-Mail", type: "email"
            = f.password_field :password, type: "password", placeholder: "Password"
        .col-md-12
          %h4 Group
          .user-user-member.row
            .user-name.col-md-12
              = f.text_area :group, cols: "30", placeholder: "Group", rows: "4"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", placeholder: "Profile", rows: "4"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :work, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit "Save", class: "btn btn-lg btn-primary btn-block"