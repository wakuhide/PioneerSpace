.container
  = form_for resource, html: {class: "form-signin"}, url: session_path(resource_name) do |f|
    %h2.form-signin-heading Please sign in
    = f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control"
    = f.password_field :password, placeholder: "Password", class: "form-control"
    .checkbox
      %label
        = f.check_box :remember_me
        Remember me
    = f.submit "Sign in", class: "button btn btn-lg btn-primary btn-block"

  .text-center
    %p
      Not a member?
      = link_to "Sign up now ", new_user_registration_path

