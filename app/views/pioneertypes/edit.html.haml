.container.proto-new
  = form_for @pioneertype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title", required: true
      .row
        .col-md-12
          = image_tag @pioneertype.fetch_main_image, class: 'cover-image-upload' do
            = f.fields_for :pioneertype_images do |image|
              = image.file_field :image, required: true
              = image.hidden_field :status, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            - if @pioneertype.fetch_sub_image(0)
              %li.list-group-item.col-md-4
                = image_tag @pioneertype.fetch_sub_image(0).image, class: 'image-upload' do
                  = f.fields_for :pioneertype_images do |image|
                    = image.file_field :image
                    = image.hidden_field :status, value: "sub"
            - if @pioneertype.fetch_sub_image(1)
              %li.list-group-item.col-md-4
                = image_tag @pioneertype.fetch_sub_image(1).image, class: 'image-upload' do
                  = f.fields_for :pioneertype_images do |image|
                    = image.file_field :image
                    = image.hidden_field :status, value: "sub"
            - if @pioneertype.fetch_sub_image(2)
              %li.list-group-item.col-md-4
                = image_tag @pioneertype.fetch_sub_image(2).image, class: 'image-upload', id: 'hide_back' do
                  = f.fields_for :pioneertype_images do |image|
                    = image.file_field :image
                    = image.hidden_field :status, value: "sub"
            - else
              %li.list-group-item.col-md-4
                = image_tag @pioneertype.fetch_sub_image(2).try(:image), class: 'image-upload', id: 'hide_form' do
                  = f.fields_for :pioneertype_images do |image|
                    = image.file_field :image
                    = image.hidden_field :status, value: "sub"
                .image-upload-plus
                  %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catchcopy, placeholder: "Catch Copy", required: true
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4", required: true
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        = f.submit "Publish", class: 'btn btn-lg btn-primary btn-block'
